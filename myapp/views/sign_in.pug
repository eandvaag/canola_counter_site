doctype html

html
    head
        title="Plant Detection"
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(href='/plant_detection/stylesheets/main.css' rel='stylesheet')
        
        script(src="https://code.jquery.com/jquery-3.6.0.js")
        script(type='text/javascript' src='/plant_detection/javascripts/sign_in.js')

    body

        div(id="container")

            div(id="body" class="center")

                div(class="panel" style="width: 310px; height: 350px")

                    h(class="header2" style="font-size:26px") Sign In

                    br
                    br

                    form(action="")

                        label(for="username" class="label" style="text-align: left; padding-left: 5px") Username

                        input(id="username" name="username" type="text" required)

                        label(for="password" class="label" style="text-align: left; padding-left: 5px") Password

                        input(id="password" name="password" type="password" required)

                        br
                        br

                        button(class="std-button std-button-hover")
                            span Sign In

                        hr

                        p(id="error_message" align="center")

