doctype html

html
    head
        title="Canola Counter"
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="icon" href="/canola_counter/images/favicon.ico")
        link(href='/canola_counter/stylesheets/main.css' rel='stylesheet')
        
        script(src="https://code.jquery.com/jquery-3.6.0.js")
        script(type='text/javascript' src='/canola_counter/javascripts/sign_in.js')

    body

        div(id="container")

            div(id="body")
                // class="center")

                div(class="panel_center")
                    div(class="sign_in_panel") 
                        // style="width: 310px; padding: 10px 20px;") 
                        // style="width: 310px; height: 350px")


                        div(style="height:70px")
                            h(class="title" style="font-size:32px; font-variant-caps: small-caps") Canola Counter

                        //br

                        div(class="dark-bg" style="padding: 10px 20px; border: none; border-top: 1px solid white; border-bottom: 1px solid white;")
                            form(action="")

                                label(for="username" class="label" style="text-align: left; padding-left: 5px") Username

                                input(id="username" name="username" type="text" required)

                                label(for="password" class="label" style="text-align: left; padding-left: 5px") Password

                                input(id="password" name="password" type="password" required)

                                br
                                br

                                button(class="std-button std-button-hover")
                                    span Sign In

                                //hr

                        div(style="height:50px; display: block")
                            br
                            span(id="error_message" style="text-align: center;")

